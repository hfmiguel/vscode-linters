{
	/** EXECUTABLES */
	"php.validate.executablePath": "/usr/bin/php",
	"phpcs.executablePath": "/usr/local/bin/phpcs",
	"phpSniffer.executablesFolder": "/usr/local/bin",
	"prettier.prettierPath": "/usr/lib/node_modules/prettier",
	"php.validate.enable": true,
	"php.validate.run": "onType",
	"editor.showUnused": true,
	/** FORMAT RULES */
        "phpSniffer.standard": "/home/felix/phpcs.xml",
        "phpcs.standard":  "/home/felix/phpcs.xml",
	"intelephense.format.braces": "psr12",
	/** PHP CS */
	"phpcs.enable": true,
	"phpcs.lintOnSave": true,
	"phpcs.lintOnOpen": true,
	"phpcs.lintOnType": true,
	"phpcs.autoConfigSearch": true,
	"phpcs.showWarnings": true,
	"phpcs.errorSeverity": 1,
	"phpcs.warningSeverity": 1,
	"phpcs.showSources": true,
        "phpcs.composerJsonPath": "composer.json",
	"phpSniffer.run": "onType",
    /** INTELEPHENSE */
	"intelephense.environment.documentRoot": "${workspaceFolder}",
	"intelephense.environment.includePaths": [
		"${workspaceFolder}/vendor",
		"vendor",
		"/usr/bin/php"
	],
	/***  PRETTIER */
	"prettier.enableDebugLogs": true,
	"prettier.resolveGlobalModules": true,
	"eslint.timeBudget.onValidation": {
		"warning": 500,
		"error": 1000
	},
	"prettier.printWidth": 80,
	"prettier.tabWidth": 2,
	"prettier.useTabs": true,
	"prettier.semi": true,
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": false,
	"prettier.trailingComma": "all",
	"prettier.bracketSpacing": true,
	"prettier.bracketSameLine": false,
	"prettier.arrowParens": "avoid",
	"prettier.requirePragma": true,
	"prettier.insertPragma": true,
	"prettier.requireConfig": false,
	"prettier.singleAttributePerLine": true,
	"prettier.htmlWhitespaceSensitivity": "strict",
	/** ESLINT */
	"eslint.run": "onType",
	"eslint.enable": true,
	"eslint.options": {
		"extensions": [".js", ".html", ".vue", ".jsx", ".tsx", ".ts"]
	},
	"eslint.validate": [
		"js",
		"babel",
		"babelrc",
		"babel-javascript",
		"javascript",
		"typescript",
		"html",
		"vue",
		"javascriptreact",
		"typescriptreact"
	],
	"eslint.probe": ["javascript", "javascriptreact", "vue"]
}
