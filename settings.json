{
	/** EXECUTABLES */
	"php.validate.executablePath": "/usr/bin/php",
	"phpcs.executablePath": "/usr/local/bin/phpcs",
	"phpSniffer.executablesFolder": "/usr/local/bin",
	"intelephense.environment.phpVersion": "8.2.6",
	"prettier.prettierPath": "/usr/lib/node_modules/prettier",
	"php.validate.enable": true,
	"php.validate.run": "onType",
    "php.suggest.basic": true,
	"editor.showUnused": true,
	/** FORMAT RULES */
    "phpSniffer.standard": "/home/$USER/phpcs.xml",
    "phpcs.standard":  "/home/$USER/phpcs.xml",
	"intelephense.format.braces": "psr12",
	/** PHP CS */
	"phpcs.enable": true,
	"phpcs.lintOnSave": true,
	"phpcs.lintOnOpen": true,
	"phpcs.lintOnType": true,
	"phpcs.autoConfigSearch": true,
	"phpcs.showWarnings": true,
	"phpcs.errorSeverity": 1,
	"phpcs.warningSeverity": 1,
	"phpcs.showSources": true,
    "phpcs.composerJsonPath": "composer.json",
	"phpSniffer.run": "onType",
    /** INTELEPHENSE */
    "intelephense.files.associations": ["*.php", "*.phtml"],
	"intelephense.environment.documentRoot": "${workspaceFolder}",
	"intelephense.environment.includePaths": [
        "${workspaceFolder}",
		"${workspaceFolder}/vendor",
        "${workspaceFolder}/vendor/laravel",
        "vendor"
	],
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/resources/views/**"
    ],
	"intelephense.rename.namespaceMode": "all",
	"intelephense.diagnostics.enable": true,
	"intelephense.diagnostics.run": "onSave",
    "intelephense.diagnostics.argumentCount": true,
	"intelephense.diagnostics.unexpectedTokens": true,
	"intelephense.diagnostics.undefinedFunctions": true,
	"intelephense.diagnostics.undefinedSymbols": true,
	"intelephense.diagnostics.undefinedTypes": true,
	"intelephense.diagnostics.undefinedMethods": true,
	/***  PRETTIER */
	"prettier.enableDebugLogs": true,
	"prettier.resolveGlobalModules": true,
	"eslint.timeBudget.onValidation": {
		"warning": 500,
		"error": 1000
	},
	"prettier.printWidth": 80,
	"prettier.tabWidth": 2,
	"prettier.useTabs": true,
	"prettier.semi": true,
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": false,
	"prettier.trailingComma": "all",
	"prettier.bracketSpacing": true,
	"prettier.bracketSameLine": false,
	"prettier.arrowParens": "avoid",
	"prettier.requirePragma": true,
	"prettier.insertPragma": true,
	"prettier.requireConfig": false,
	"prettier.singleAttributePerLine": true,
	"prettier.htmlWhitespaceSensitivity": "strict",
	/** ESLINT */
	"eslint.run": "onType",
	"eslint.enable": true,
	"eslint.options": {
		"extensions": [".js", ".vue", ".jsx", ".tsx", ".ts"]
	},
	"eslint.validate": [
		"js",
		"babel",
		"babelrc",
		"babel-javascript",
		"javascript",
		"typescript",
		"html",
		"vue",
		"javascriptreact",
		"typescriptreact"
	],
	"eslint.probe": ["javascript", "javascriptreact", "vue"]
}
